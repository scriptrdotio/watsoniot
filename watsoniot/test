var messengerModule = require("./messenger");
var config = require("./config");

try {
    
    var config = {
        
        url: config.url,
    	username: config.apiKey,
        token: config.appToken,
        maxWait: config.maxWait
    };
    
    var messenger = new messengerModule.Messenger(config);
    var device = {
     //   id: "gd001",
     //   type: "Kitchen"
        id: "nebula-tom-id",
        type: "nebula"
    };
    
    return messenger.sendCommand(device, {commandId: "open", params: {"applianceType": "FRIDGE"}});
}catch(exception){
    return exception;
}
